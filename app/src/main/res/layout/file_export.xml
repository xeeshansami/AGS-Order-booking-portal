<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/file_export_layout"
    android:background="@drawable/export_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_file"
            android:tint="@color/white"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:drawableTint="@color/white"
            android:gravity="center_vertical"
            android:text="File Export As..."
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:layout_marginRight="20dp"
            android:id="@+id/cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@android:color/holo_red_dark"></ImageView>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/file_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:background="@drawable/export_btn"
            android:drawableTop="@mipmap/ic_text_file"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Text file"></Button>
        <View
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="100dp"></View>
        <Button
            android:layout_margin="2dp"
            android:id="@+id/pdf_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/export_btn"
            android:drawableTop="@drawable/ic_pdf"
            android:drawableTint="@android:color/holo_red_dark"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Pdf file"></Button>

    </LinearLayout>
</LinearLayout>